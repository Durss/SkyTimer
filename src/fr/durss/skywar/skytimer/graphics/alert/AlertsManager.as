package fr.durss.skywar.skytimer.graphics.alert {	import fr.durss.skywar.skytimer.graphics.timers.item.TimerItem;	import flash.display.Sprite;	import flash.events.Event;	/**	 * Manages the different alerts.	 * 	 * @author  Francois	 */	public class AlertsManager extends Sprite {				private var _osAlert:OSAlert;		private var _systemAlert:SystemAlert;								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>AlertsManager</code>.<br>		 */		public function AlertsManager() {			addEventListener(Event.ADDED_TO_STAGE, initialize);		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */		/**		 * Starts the different alerts.		 */		public function alert(timer:TimerItem):void {			_osAlert.activate(timer);			_systemAlert.activate(timer);		}						/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Initialize the class.<br>		 */		private function initialize(e:Event):void {			removeEventListener(Event.ADDED_TO_STAGE, initialize);						_systemAlert	= new SystemAlert();			_osAlert		= new OSAlert(stage.nativeWindow);						addChild(_systemAlert);		}	}}
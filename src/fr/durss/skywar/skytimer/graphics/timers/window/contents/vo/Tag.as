package fr.durss.skywar.skytimer.graphics.timers.window.contents.vo {	/**	 * Contains a tag's datas.	 * 	 * @author  Fran√ßois	 */	public class Tag {		private var _name:String;		private var _sound:String;		private var _color:uint;						/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>TagVo</code>		 * 		 * @param datas		optional anonymous object to parse for initialization.		 * @param name		name of the tag. (do not define if datas parameter is set)		 * @param sound		sound of the tag. (do not define if datas parameter is set)		 * @param color		color of the tag. (do not define if datas parameter is set)		 */		public function Tag(datas:Object = null, name:String = "", sound:String = "", color:uint = 0) {			if(datas != null) {				parse(datas);			}else{				_sound = sound;				_color = color;				_name = name;			}		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/**		 * Converts the value object into an anonymous object ready to be stored in SharedObjects.		 */		public function get object():Object { return {name:_name, color:_color, sound:_sound}; }				/**		 * Gets the tag's name		 */		public function get name():String { return _name; }				/**		 * Gets the tag's sound's classpath		 */		public function get sound():String { return _sound; }				/**		 * Gets the tag's color		 */		public function get color():uint { return _color; }		/* ****** *		 * PUBLIC *		 * ****** */		public function toString():String {			return "[TagVo :: name=\""+name+"\", sound=\""+sound+"\", color=\""+color+"\"]";		}								/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Parse an object to get datas on it and populate this value object		 */		private function parse(datas:Object):void {			_name	= datas["name"];			_sound	= datas["sound"];			_color	= datas["color"];		}	}}
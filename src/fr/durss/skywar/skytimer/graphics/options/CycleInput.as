package fr.durss.skywar.skytimer.graphics.options {	import fr.durss.skywar.skytimer.graphics.common.TimeInput;	import com.nurun.components.text.CssTextField;	import flash.events.Event;	/**	 * Displays the cycle iinput of the options panel.	 * 	 * @author François	 */	public class CycleInput extends TimeInput {
		private var _label:CssTextField;						/* *********** *		 * CONSTRUCTOR *		 * *********** */		public function CycleInput() { super(); }						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/**		 * No effect! Can't resize this component.		 */		override public function set width(value:Number):void { }		/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */		override protected function initialize(e:Event):void {			_label	= addChild(new CssTextField()) as CssTextField;			_label.setText("Réglez la durée d'un cycle :", "windowLabel");			super.initialize(e);		}				/**		 * Resize and replace the elements		 */		override protected function computePositions(e:Event):void {			_stepperH.y	= Math.round(_label.y + _label.height + 2);			super.computePositions(e);		}	}}
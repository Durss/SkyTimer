package fr.durss.skywar.skytimer.events {	import fr.durss.skywar.skytimer.graphics.timers.item.TimerItem;	import flash.events.Event;	/**	 * Event fired by the <code>Timers</code> class.	 * 	 * @author  Francois	 */	public class TimerViewEvent extends Event {		public static const TIMER_COMPLETE:String = "timerComplete";				private var _timer:TimerItem;										/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>TimerEvent</code>.<br>		 */		public function TimerViewEvent(type:String, timer:TimerItem, bubbles:Boolean = false, cancelable:Boolean = false) {			_timer = timer;			super(type, bubbles, cancelable);		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/**		 * Gets the timer's reference that completes.		 */		public function get timer():TimerItem {			return _timer;		}		/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */	}}
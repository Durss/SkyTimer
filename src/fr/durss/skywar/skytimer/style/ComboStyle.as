package fr.durss.skywar.skytimer.style {	import fl.controls.ComboBox;	import fr.durss.skywar.skytimer.data.SkinMetrics;	import fr.durss.skywar.skytimer.graphics.combo.ComboDisableSkin;	import fr.durss.skywar.skytimer.graphics.combo.ComboDownSkin;	import fr.durss.skywar.skytimer.graphics.combo.ComboOverSkin;	import fr.durss.skywar.skytimer.graphics.combo.ComboUpSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollDownBtDownSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollDownBtOverSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollDownBtUpSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollThumbDownSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollThumbOverSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollThumbUpSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollTrackDownSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollTrackOverSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollTrackUpSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollUpBtDownSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollUpBtOverSkin;	import fr.durss.skywar.skytimer.graphics.combo.ScrollUpBtUpSkin;	import com.nurun.utils.text.CssManager;	import flash.text.AntiAliasType;	import flash.text.GridFitType;	/**	 * Contains a static method to set the styles of a combobox	 * 	 * @author Fran√ßois	 */	public class ComboStyle {		//Vars declaration						/* *********** *		 * CONSTRUCTOR *		 * *********** */		public function ComboStyle() { }						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */		/**		 * Sets the styles on a combobox.<p>		 * 		 * @param combobox				combobox on which apply the styles.		 * @param promptCss				css style to use for prompt label.		 * @param itemCss				css style to use for item's labels.		 * @param dropDownCel/lRenderer	cellrenderer to use for items.		 */		public static function setStyles(combobox:ComboBox, promptCss:String = "comboboxPrompt", itemCss:String = "comboboxItem", dropDownCellRenderer:Class = null):void {			combobox.setStyle("embedFonts", true);			combobox.textField.setStyle("embedFonts", true);			combobox.dropdown.setRendererStyle("embedFonts", true);						combobox.textField.textField.antiAliasType	= AntiAliasType.ADVANCED;			combobox.textField.textField.gridFitType	= GridFitType.PIXEL;			combobox.setStyle("textFormat", CssManager.getInstance().getTextFormatOf(promptCss));			combobox.setStyle("disabledTextFormat", CssManager.getInstance().getTextFormatOf(promptCss+"_disabled"));			combobox.textField.setStyle("textFormat", CssManager.getInstance().getTextFormatOf(promptCss));			combobox.textField.setStyle("disabledTextFormat", CssManager.getInstance().getTextFormatOf(promptCss+"_disabled"));						ListStyle.setStyles(combobox.dropdown, itemCss, dropDownCellRenderer);			setSkin(combobox);		}				public static function setSkin(combobox:ComboBox):void {			if(SkinMetrics.getInstance().currentSkin == SkinMetrics.SKIN_DANGREN) {				//BACKGROUND				combobox.setStyle("upSkin",					ComboUpSkin);				combobox.setStyle("overSkin",				ComboOverSkin);				combobox.setStyle("downSkin",				ComboDownSkin);				combobox.setStyle("disabledSkin",			ComboDisableSkin);								//SCROLL				combobox.setStyle("upArrowUpSkin",			ScrollUpBtUpSkin);				combobox.setStyle("upArrowOverSkin",		ScrollUpBtOverSkin);				combobox.setStyle("upArrowDownSkin",		ScrollUpBtDownSkin);								combobox.setStyle("downArrowUpSkin",		ScrollDownBtUpSkin);				combobox.setStyle("downArrowOverSkin",		ScrollDownBtOverSkin);				combobox.setStyle("downArrowDownSkin",		ScrollDownBtDownSkin);								combobox.setStyle("thumbUpSkin",			ScrollThumbUpSkin);				combobox.setStyle("thumbOverSkin",			ScrollThumbOverSkin);				combobox.setStyle("thumbDownSkin",			ScrollThumbDownSkin);								combobox.setStyle("trackUpSkin",			ScrollTrackUpSkin);				combobox.setStyle("trackOverSkin",			ScrollTrackOverSkin);				combobox.setStyle("trackDownSkin",			ScrollTrackDownSkin);			}else{				//BACKGROUND				combobox.setStyle("upSkin",					ComboBox_upSkin);				combobox.setStyle("overSkin",				ComboBox_overSkin);				combobox.setStyle("downSkin",				ComboBox_downSkin);				combobox.setStyle("disabledSkin",			ComboBox_disabledSkin);								//SCROLL				combobox.setStyle("upArrowUpSkin",			ScrollArrowUp_upSkin);				combobox.setStyle("upArrowOverSkin",		ScrollArrowUp_overSkin);				combobox.setStyle("upArrowDownSkin",		ScrollArrowUp_downSkin);								combobox.setStyle("downArrowUpSkin",		ScrollArrowDown_upSkin);				combobox.setStyle("downArrowOverSkin",		ScrollArrowDown_overSkin);				combobox.setStyle("downArrowDownSkin",		ScrollArrowDown_downSkin);								combobox.setStyle("thumbUpSkin",			ScrollThumb_upSkin);				combobox.setStyle("thumbOverSkin",			ScrollThumb_overSkin);				combobox.setStyle("thumbDownSkin",			ScrollThumb_downSkin);								combobox.setStyle("trackUpSkin",			ScrollTrack_skin);				combobox.setStyle("trackOverSkin",			ScrollTrack_skin);				combobox.setStyle("trackDownSkin",			ScrollTrack_skin);			}			ListStyle.setStyles(combobox.dropdown);		}						/* ******* *		 * PRIVATE *		 * ******* */	}}
package fr.durss.skywar.skytimer.data {	import fr.durss.skywar.skytimer.graphics.timers.item.TimerItemPlugger;	/**	 * Contains the data about a dependency.	 * 	 * @author  Francois	 */	public class Dependency {				private var _color:uint;		private var _input:TimerItemPlugger;		private var _output:TimerItemPlugger;								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>Dependency</code>.<br>		 */		public function Dependency(input:TimerItemPlugger, output:TimerItemPlugger, color:uint = 0) {			_input		= input;			_output		= output;			_color		= (color == 0)? getColor() << 16 | getColor() << 8 | getColor() : color;		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */				/**		 * Gets the dependency input (where de relation starts from).		 */		public function get input():TimerItemPlugger { return _input; }				/**		 * Gets the dependency output (where de relation ends to).		 */		public function get output():TimerItemPlugger { return _output; }				/**		 * Gets the wire color.		 */		public function get color():uint { return _color; }				/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Gets a rendom color component.		 */		private function getColor():uint {			return Math.random() * 0xbb + 0x33;		}	}}